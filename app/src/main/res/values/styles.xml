<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:elevation">1dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/secondaryBackgroundColor</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SecondarytextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="profileIcon">
        <item name="android:background">@color/secondaryBackgroundColor</item>
        <item name="android:backgroundTintMode">add</item>
    </style>


</resources>
